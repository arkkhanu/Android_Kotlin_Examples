<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:padding="10dp">
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/thumbnail_book"
                    android:background="@drawable/ic_image_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            <TextView
                    android:id="@+id/title_tv"
                    android:layout_toRightOf="@+id/thumbnail_book"
                    android:text="Title world"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/author_tv"
                    android:text="Author World"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/thumbnail_book"
                    android:layout_below="@id/title_tv"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/publisherdate_tv"
                    android:text="Publisher Date"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/author_tv"
                    android:layout_toRightOf="@id/thumbnail_book"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>