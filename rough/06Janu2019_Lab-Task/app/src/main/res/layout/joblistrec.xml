<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:id="@+id/joblist_cardview"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="#D9E3EE"
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/joblist_company_logo"
                    android:layout_width="95dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_height="95dp"/>
            <TextView
                    android:layout_toRightOf="@id/joblist_company_logo"
                    android:id="@+id/joblist_title"
                    android:text="dkjlc"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textColor="#EB313030"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/joblist_created_at"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/joblist_company_logo"
                    android:layout_marginStart="10dp"
                    android:text="2321564"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/joblist_title"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/joblist_company"
                    android:layout_below="@id/joblist_created_at"
                    android:layout_toRightOf="@id/joblist_company_logo"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="abddfsfdfd"
                    android:textSize="17dp"
                    android:textColor="#783AEB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/joblist_type"
                    android:layout_width="wrap_content"
                    android:text="Full Time"
                    android:textStyle="bold"
                    android:layout_marginEnd="7dp"
                    android:textColor="#27862B"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/joblist_created_at"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>