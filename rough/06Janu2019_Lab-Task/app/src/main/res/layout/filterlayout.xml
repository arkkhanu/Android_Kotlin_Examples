<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">

    <TextView
            android:text="Filter Job Position"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#C8000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <View
            android:layout_width="match_parent"
            android:background="#3F51B5"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"/>

    <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/jobtitle_et"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:backgroundTint="#3F51B5"
                android:hint="Job Title"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/joblocation_et"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:backgroundTint="#3F51B5"
                android:hint="Job Location"/>
    </android.support.design.widget.TextInputLayout>

    <CheckBox
            android:id="@+id/fulltime_checked"
            android:layout_marginTop="15dp"
            android:text="Full Time"
            android:buttonTint="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginEnd="25dp"
            android:layout_gravity="end"
            android:textSize="20dp"
            android:textColor="#4255C2"
            android:id="@+id/jobsearch_tvbtn"
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>