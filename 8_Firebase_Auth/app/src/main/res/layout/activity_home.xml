<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="5dp"
        tools:context=".HomeActivity">

    <TextView
            android:id="@+id/user_profie"
            android:layout_marginTop="50dp"
            android:text="User Name"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/user_profie"
            android:id="@+id/_email_a"
            android:text="Email"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_below="@id/_email_a"
            android:id="@+id/_age_a"
            android:text="Age"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_below="@id/_age_a"
            android:textSize="20dp"
            android:text="Gender"
            android:id="@+id/_gender_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_below="@id/_gender_a"
            android:text="Password"
            android:textSize="20dp"
            android:id="@+id/_pass_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/sign_out_btn"
            android:text="Sign Out"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_below="@id/_pass_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>